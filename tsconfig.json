{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "isolatedModules": true,
    "module": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strictNullChecks": true,
    "target": "esnext",
    "jsx": "react-native",
    "types": [
      "node",
      "react",
      "react-dom",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
